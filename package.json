{
	"name": "cinephage",
	"private": true,
	"version": "0.0.1",
	"license": "GPL-3.0-or-later",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"start": "node build/index.js",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"migrate:remove-enabled": "tsx scripts/remove-monitoring-enabled.ts",
		"db:reset": "rm -f data/cinephage.db && echo 'Database deleted. Will be recreated on next startup.'",
		"db:info": "sqlite3 data/cinephage.db \"SELECT value FROM settings WHERE key='schema_version'\" 2>/dev/null || echo 'No database found'"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"@types/adm-zip": "^0.5.7",
		"@types/better-sqlite3": "^7.6.13",
		"@types/js-yaml": "^4.0.9",
		"@types/node": "^25",
		"@types/parse-torrent": "^5.8.8",
		"@vitest/browser-playwright": "^4.0.16",
		"daisyui": "^5.5.14",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.4",
		"globals": "^16.4.0",
		"lucide-svelte": "^0.561.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.14",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.50.0",
		"vite": "^7.3.0",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.5",
		"vitest-browser-svelte": "^2.0.1"
	},
	"dependencies": {
		"@types/crypto-js": "^4.2.2",
		"adm-zip": "^0.5.16",
		"better-sqlite3": "^12.5.0",
		"cheerio": "^1.1.2",
		"chokidar": "^5.0.0",
		"crypto-js": "^4.2.0",
		"fast-xml-parser": "^5.3.3",
		"js-yaml": "^4.1.1",
		"parse-torrent": "^11.0.19",
		"playwright": "^1.57.0",
		"zod": "^4.2.1"
	}
}
